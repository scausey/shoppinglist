<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="hu.ait.android.shoppinglist">

    <application
        android:allowBackup="true"
        android:icon="@drawable/my_cart"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:name=".ShoppingItemApplication">

        <meta-data android:name="DATABASE" android:value="myshoppinglistdb.db" />
        <meta-data android:name="VERSION" android:value="30" />
        <meta-data android:name="QUERY_LOG" android:value="true" />
        <meta-data android:name="DOMAIN_PACKAGE_NAME"
            android:value="hu.ait.android.shoppinglist.data" />

        <activity android:name=".MainActivity">
        </activity>

        <activity android:name=".SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".NewItemActivity">
        </activity>
    </application>

</manifest>
